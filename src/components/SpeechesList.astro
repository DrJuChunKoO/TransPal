---
import type { SpeechMetadata } from "../types/speech";
import { getSpeeches } from "../utils/speeches";

// Get all speeches and sort by date (newest first)
const speeches = await getSpeeches();
const sortedSpeeches = speeches.sort((a, b) => {
  const dateA = new Date(a.date);
  const dateB = new Date(b.date);
  return dateB.getTime() - dateA.getTime();
});

// Format date for display
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString("zh-TW", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
---

<section
  class="mx-auto max-w-4xl px-4 py-6 sm:px-6 sm:py-8"
  aria-labelledby="speeches-heading"
>
  {
    sortedSpeeches.length === 0 ? (
      <div class="py-12 text-center" role="status" aria-live="polite">
        <div class="text-base text-gray-500 sm:text-lg dark:text-gray-400">
          目前沒有對話
        </div>
      </div>
    ) : (
      <nav aria-label="對話列表">
        <ul class="space-y-3 sm:space-y-4" role="list">
          {sortedSpeeches.map((speech) => (
            <li>
              <a
                href={`/speeches/${speech.filename}/`}
                class="block touch-manipulation rounded-lg border border-gray-200 bg-white p-4 shadow-sm transition-all duration-200 hover:border-gray-300 hover:shadow-md focus:border-transparent focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:outline-none active:scale-[0.98] sm:p-6 dark:border-white/5 dark:bg-white/5 dark:hover:border-white/20 dark:focus:ring-offset-gray-900"
                aria-describedby={`speech-date-${speech.filename}`}
              >
                <article class="flex items-center justify-between gap-3">
                  <div class="min-w-0 flex-1">
                    <h2 class="mb-0.5 line-clamp-2 text-lg font-semibold text-gray-900 sm:text-xl dark:text-gray-100">
                      {speech.name}
                    </h2>
                    <time
                      id={`speech-date-${speech.filename}`}
                      datetime={speech.date}
                      class="text-sm text-gray-600 dark:text-white/75"
                    >
                      {formatDate(speech.date)}
                    </time>
                  </div>
                  <div class="flex-shrink-0" aria-hidden="true">
                    <svg
                      class="h-6 w-6 text-gray-400 sm:h-8 sm:w-8 dark:text-white/75"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                      />
                    </svg>
                  </div>
                </article>
              </a>
            </li>
          ))}
        </ul>
      </nav>
    )
  }
</section>
